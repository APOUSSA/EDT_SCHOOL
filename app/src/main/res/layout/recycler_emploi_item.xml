<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/rounded_comer">

    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:id="@+id/emploi_title_text_view"
        android:text="Titre de l'emplois du temps"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginHorizontal="4dp"/>

    <TextView
        android:id="@+id/emploi_classe_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginHorizontal="4dp"
       android:layout_marginBottom="10dp"
        android:text="Classe"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emploi_content_text_view"
        android:text="Cela peut etre un contenue long"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="17sp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emploi_timestamp_text_view"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:text="Titre de l'emplois du temps"
        android:gravity="right"
        android:textSize="12sp"
        android:layout_marginHorizontal="4dp"/>



</LinearLayout>